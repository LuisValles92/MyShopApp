<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="EmpresaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorSecundary</item>
        <!--        'TINT' COLOR DE LOS ICONOS DEL TOOLBAR-->
        <item name="android:textColorSecondary">@color/colorBlanco</item>
    </style>

    <style name="ClienteTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!--        'TINT' COLOR DE LOS ICONOS DEL TOOLBAR-->
        <item name="android:textColorSecondary">@color/colorBlanco</item>
    </style>

    <style name="Toolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="RecyclerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorSecundary</item>
    </style>

    <style name="RecyclerPTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

</resources>
